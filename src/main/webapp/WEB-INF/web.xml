<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

  <web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
      <servlet-name>CloseServlet</servlet-name>
      <servlet-class>ru.job4j.servlets.CloseServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>LoginServlet</servlet-name>
      <servlet-class>ru.job4j.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>RegServlet</servlet-name>
      <servlet-class>ru.job4j.servlets.RegServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>TaskServlet</servlet-name>
      <servlet-class>ru.job4j.servlets.TaskServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>LogoutServlet</servlet-name>
      <servlet-class>ru.job4j.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>CloseServlet</servlet-name>
      <url-pattern>/close</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>LoginServlet</servlet-name>
      <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>RegServlet</servlet-name>
      <url-pattern>/reg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>TaskServlet</servlet-name>
      <url-pattern>/task</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>LogoutServlet</servlet-name>
      <url-pattern>/logout</url-pattern>
    </servlet-mapping>

  </web-app>